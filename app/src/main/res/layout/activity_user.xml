<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.syw.hongyunhonghe.UserActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_user_text"
                android:textSize="@dimen/user_name_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <!-- place holder -->
            <Button
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_favourite_text"/>

            <Button
                android:id="@+id/favourite_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_favourite_text"/>

            <!-- place holder -->
            <Button
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_favourite_text"/>

            <Button
                android:id="@+id/verify_email_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_verify_button"/>

            <Button
                android:id="@+id/edit_user_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_editor_button"/>

            <Button
                android:id="@+id/reset_pwd_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_reset_pwd_button"/>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_logout_button"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
