<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/review_row_horizontal_padding"
        android:paddingRight="@dimen/review_row_horizontal_padding"
        android:paddingTop="@dimen/review_row_vertical_padding">

        <TextView
            android:id="@+id/review_username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="@dimen/review_username_text_size"/>

        <TextView
            android:id="@+id/review_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/review_time_text_size"/>

    </LinearLayout>

    <TextView
        android:paddingLeft="@dimen/review_row_horizontal_padding"
        android:paddingRight="@dimen/review_row_horizontal_padding"
        android:paddingTop="@dimen/review_row_vertical_padding"
        android:paddingBottom="@dimen/review_row_vertical_padding"
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/review_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/horizontal_ruler_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/white"/>

</LinearLayout>
